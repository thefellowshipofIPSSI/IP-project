{% extends 'HWIOAuthBundle::layout.html.twig' %}

{% block title %} Mon profile {% endblock %}

    {% block headerContainer %}
        <div class="col-lg-12">
            <h1 class="page-header">
                Profile
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
                </li>
                <li class="active">
                    <i class="fa fa-eye"></i> Mon profile
                </li>
            </ol>
        </div>
    {% endblock %}

    {% block hwi_oauth_content %}

        <h3>{{ 'header.success' | trans({'%name%': userInformation.realName}, 'HWIOAuthBundle') }}</h3>
        <div class="row">
            <a href="{{ path('intranet_user_profile', {'user_id': app.user.id}) }}" class="btn btn-primary">Retour au profile</a>
        </div>
    {% endblock hwi_oauth_content %}