{% block body %}
    {{ form_start(form, {'action': path('user_register'), 'attr': {'id': 'register-form', 'style': 'display:none;'}, 'method': 'POST'}) }}
        <div class="form-group">
            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Votre login'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre email'}}) }}
        </div>
        <div>
            {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Votre mot de passe', 'class': 'col-md-6 form-group'}}) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Confirmation', 'class': 'col-md-6 form-group'}}) }}
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    {{ form_widget(form.save, {'label':'Inscription', 'attr': {'class': 'form-control btn btn-register'}}) }}
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $('#is-member').change(function(){
            if(this.checked)
                $('#member-form').fadeIn('fast');
            else
                $('#member-form').fadeOut('fast');

        });
    </script>
{% endblock %}