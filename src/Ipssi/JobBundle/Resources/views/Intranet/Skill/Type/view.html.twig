{% extends 'intranet.html.twig' %}

{% block title %} Offres {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Offres
            <small>Détails</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
            </li>
            <li class="active">
                <a href="{{ path('intranet_societies') }}">Offres</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Détails : {{ offer.name }}
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <div class="col-lg-12">


        <!-- Blog Post -->

        <!-- Title -->
        <h1>{{ offer.name|capitalize }}</h1>

        <!-- Author -->
        <p class="lead">
            Société ajoutée le {{ offer.createdAt|date('d/m/Y') }} à {{ offer.createdAt|date('H:i') }}
        </p>

        <hr>

        {% if offer.logo is not null %}

            <img src="{{ asset(offer.logo.webPath) }}" height="200">

        {% endif %}

        <hr>

        <!-- Post Content -->
        <p class="lead">{{ offer.presentation }}</p>

        <address>
            <strong>{{ offer.name | capitalize }}</strong><br>
            {{ offer.address }}
            {#<abbr title="Phone">P:</abbr> (123) 456-7890#}
        </address>

    </div>

    <br><br><br>
    <a href="{{ path('intranet_offer_update', {'offer': offer.id}) }}" class="btn btn-primary" style="margin-bottom:10px;">Modifier</a>


{% endblock %}