{% extends 'intranet.html.twig' %}

{% block title %} Offres {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Offres
            <small>Détails</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
            </li>
            <li class="active">
                <a href="{{ path('intranet_societies') }}">Offres</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Détails : {{ skill.name }}
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <div class="col-lg-12">


        <!-- Blog Post -->

        <!-- Title -->
        <h1>{{ skill.name|capitalize }}</h1>

        <!-- Author -->
        <p class="lead">
            Société ajoutée le {{ skill.createdAt|date('d/m/Y') }} à {{ skill.createdAt|date('H:i') }}
        </p>

        <hr>

        {% if skill.logo is not null %}

            <img src="{{ asset(skill.logo.webPath) }}" height="200">

        {% endif %}

        <hr>

        <!-- Post Content -->
        <p class="lead">{{ skill.presentation }}</p>

        <address>
            <strong>{{ skill.name | capitalize }}</strong><br>
            {{ skill.address }}
            {#<abbr title="Phone">P:</abbr> (123) 456-7890#}
        </address>

    </div>

    <br><br><br>
    <a href="{{ path('intranet_skill_update', {'skill': skill.id}) }}" class="btn btn-primary" style="margin-bottom:10px;">Modifier</a>


{% endblock %}