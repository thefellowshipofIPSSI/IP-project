<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    {% block stylesheets %}
        <!-- Bootstrap Core CSS -->
        <link href="{{ app.request.schemeAndHttpHost ~ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Custom Fonts -->
        <link href="{{ app.request.schemeAndHttpHost ~ asset('font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    {% endblock %}

</head>
<body>
<div id="wrapper">
    <div id="page-wrapper">
        <div class="container-fluid">
            <!-- Page Heading -->
            <div class="row">
                {% block headerContainer %}
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Offre de poste
                            <small>Aperçu : {{ jobOffer.job.title }}</small>
                        </h1>
                    </div>
                {% endblock %}
            </div>
            <!-- CONTENT -->
            {% block body %}

                <div class="col-lg-12">

                    <!-- Title -->
                    <h1>Offer de poste : {{ jobOffer.job.title|capitalize }}</h1>

                    <!-- Author -->
                    <p class="lead">
                        par {{ jobOffer.user.username }} le {{ jobOffer.creationDate|date('d/m/Y') }} à {{ jobOffer.creationDate|date('H:i') }}
                    </p>

                    <hr>


                    <!-- Page Content -->
                    <p class="lead">Société : {{ jobOffer.society.name }}</p>

                    <p>Durée : {{ jobOffer.duration }}</p>
                    <p>Salaire : {{ jobOffer.salary }}</p>
                    <p>Ville : {{ jobOffer.location }}</p>

                    <p>
                        Description du poste : {{ jobOffer.description|raw }}
                    </p>
                </div>

            {% endblock %}
            <!-- END CONTENT -->
        </div>
    </div>
    <!-- /#wrapper -->
</div>
</body>
</html>
