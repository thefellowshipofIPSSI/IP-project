{% extends "intranet.html.twig" %}

{% block title %} Offre de poste {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Offre de poste
            <small>Aperçu : {{ jobOffer.job.title }}</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> <a href="{{ path('intranet_job_homepage') }}">Offre de poste</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Aperçu : {{ jobOffer.job.title }}
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <div class="col-lg-12">

        <!-- Title -->
        <h1>Offer de poste : {{ jobOffer.job.title|capitalize }}</h1>

        <!-- Author -->
        <p class="lead">
            par {{ jobOffer.user.username }} le {{ jobOffer.creationDate|date('d/m/Y') }} à {{ jobOffer.creationDate|date('H:i') }}
        </p>

        <hr>


        <!-- Page Content -->
        <p class="lead">Société : {{ jobOffer.society.name }}</p>

        <p>Durée : {{ jobOffer.duration }}</p>
        <p>Salaire : {{ jobOffer.salary }}</p>
        <p>Ville : {{ jobOffer.location }}</p>

        <p>
            Description du poste : {{ jobOffer.description|raw }}
        </p>
    </div>

    <br><br><br>
    <a href="{{ path('intranet_job_offer_update', {'id': jobOffer.id}) }}" class="btn btn-primary" style="margin-bottom:10px;">Modifier</a>


{% endblock %}