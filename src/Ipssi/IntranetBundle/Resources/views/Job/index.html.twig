{% extends 'intranet.html.twig' %}

{% block title %} Poste {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Postes
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Postes
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <a href="{{ path('intranet_job_create') }}" class="btn btn-primary" style="margin-bottom:10px;">Nouveau Poste</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for job in allJobs %}
            <tr>

                    <td>{{ job.id }}</td>
                    <td>{{ job.title }}</td>
                    <td>
                        <a href="{{ path('intranet_job_view', {'id': job.id}) }}" class="fa fa-eye" title="AperÃ§u"></a>
                        <a href="{{ path('intranet_job_update', {'id': job.id}) }}" class="fa fa-pencil-square-o" title="Modifier"></a>
                        <a href="{{ path('intranet_job_delete', {'id': job.id}) }}" class="fa fa-trash-o" title="Supprimer"></a>
                    </td>

            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}