{% extends "intranet.html.twig" %}

{% block title %} Page {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Page
            <small>Aperçu : {{ page.name }}</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> <a href="{{ path('intranet_page_homepage') }}">Page</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Aperçu : {{ page.name }}
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}


    <div class="col-lg-8">

        <a href="{{ path('intranet_page_update', {'page_id': page.id}) }}" class="btn btn-primary" style="margin-bottom:10px;">Modifier</a>


        <!-- Title -->
        <h1>{{ page.title|capitalize }}</h1>

        <h4>Categorie : {{ page.pageCategory.name }} / Template : {{ page.pageTemplate.name }}</h4>
        <!-- Author -->
        <p class="lead">
            by {{ page.user.username }}
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Created on {{ page.dateCreation|date('d/m/Y') }} à {{ page.dateCreation|date('H:i') }}</p>

        <hr>

        <!-- Page Content -->
        <p class="lead">{{ page.content }}</p>

        <p>
            {{ page.content|raw }}
        </p>
        <hr>
    </div>

{% endblock %}