{% extends 'intranet.html.twig' %}

{% block title %} Page {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Pages
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Pages
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <a href="{{ path('intranet_page_create') }}" class="btn btn-primary" style="margin-bottom:10px;">Nouvelle page</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for page in allPages %}
            <tr>

                    <td>{{ page.id }}</td>
                    <td>{{ page.name }}</td>
                    <td>{{ page.title }}</td>
                    <td>{{ page.slug }}</td>
                    <td>
                        {% if page.status == 0 %}
                            Hors ligne
                        {% else %}
                            En ligne
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('intranet_page_view', {'id': page.id}) }}" class="fa fa-eye" title="AperÃ§u"></a>
                        <a href="{{ path('intranet_page_update', {'id': page.id}) }}" class="fa fa-pencil-square-o" title="Modifier"></a>
                        <a href="{{ path('intranet_page_delete', {'id': page.id}) }}" class="fa fa-trash-o" title="Supprimer"></a>
                        {% if page.status == 0 %}
                            <a href="{{ path('intranet_page_online', {'id': page.id}) }}" class="fa fa-toggle-off" title="Mettre en ligne"></a>
                        {% else %}
                            <a href="{{ path('intranet_page_offline', {'id': page.id}) }}" class="fa fa-toggle-on" title="Mettre hors ligne"></a>
                        {% endif %}
                    </td>

            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}