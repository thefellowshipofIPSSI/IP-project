{% extends 'intranet.html.twig' %}

{% block title %} Compte rendu d'activité {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Compte rendu d'activité
            <small>Liste des Comptes rendu d'activité</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="{{ path('intranet_homepage') }}">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> Compte rendu d'activité
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <a href="{{ path('intranet_cra_create') }}" class="btn btn-primary" style="margin-bottom:10px;">Nouveau compte rendu d'activité</a>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Titre</th>
                <th>Client</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for userCRA in allUserCRAs %}
            <tr>
                <td>{{ userCRA.id }}</td>
                <td>{{ userCRA.creationDate }}</td>
                <td>{{ userCRA.title }}</td>
                <td>{{ userCRA.client }}</td>
                <td>
                    {% if userCRA.status == 0 %}
                        Hors ligne
                    {% else %}
                        En ligne
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('intranet_cra_view', {'userCRA_id': userCRA.id}) }}" class="fa fa-eye" title="Aperçu"></a>
                    <a href="{{ path('intranet_cra_update', {'userCRA_id': userCRA.id}) }}" class="fa fa-pencil-square-o" title="Modifier"></a>
                    <a href="{{ path('intranet_cra_delete', {'userCRA_id': userCRA.id}) }}" class="fa fa-trash-o" title="Supprimer"></a>
                    {% if userCRA.status == 0 %}
                        <a href="{{ path('intranet_cra_online', {'userCRA_id': userCRAid}) }}" class="fa fa-toggle-off" title="Mettre en ligne"></a>
                    {% else %}
                        <a href="{{ path('intranet_cra_offline', {'userCRA_id': userCRAid}) }}" class="fa fa-toggle-on" title="Mettre hors ligne"></a>
                    {% endif %}
                </td>

            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}