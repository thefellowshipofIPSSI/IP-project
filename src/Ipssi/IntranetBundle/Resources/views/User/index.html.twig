{% extends "intranet.html.twig" %}

{% block title %} Collaborateurs IPSSI {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Collaborateurs IPSSI
            <small>Liste des collaborateurs</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="{{ path('intranet_homepage') }}">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-user"></i> Collaborateurs
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <a href="{{ path('intranet_user_create') }}" class="btn btn-success" style="margin-bottom:10px;">Ajouter un collaborateur</a>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Login</th>
                <th>Statut</th>
                <th>Groupe</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in allUsers %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        {% if user.enabled == 0 %}
                            Compte désactivé
                        {% else %}
                            Compte activé
                        {% endif %}
                    </td>
                    <td>Groupe User</td>
                    <td>
                        <a href="{{ path('intranet_user_view', {'user_id': user.id}) }}" class="fa fa-eye" title="Aperçu"></a>
                        <a href="{{ path('intranet_user_update', {'user_id': user.id}) }}" class="fa fa-pencil-square-o" title="Modifier"></a>
                        <a href="{{ path('intranet_user_delete', {'user_id': user.id}) }}" class="fa fa-trash-o" title="Supprimer"></a>
                        {% if user.enabled == 0 %}
                            <a href="{{ path('intranet_user_enable', {'user_id': user.id}) }}" class="fa fa-toggle-on" title="Activer"></a>
                        {% else %}
                            <a href="{{ path('intranet_user_disable', {'user_id': user.id}) }}" class="fa fa-toggle-off" title="Désactiver"></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}