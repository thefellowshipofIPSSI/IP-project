{% extends "intranet.html.twig" %}

{% block title %} Actualités {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Actualités
            <small>Liste des actualités</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="{{ path('intranet_homepage') }}">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> Actualités
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}

    <a href="{{ path('intranet_news_create') }}" class="btn btn-primary" style="margin-bottom:10px;">Nouvelle Actualité</a>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>URL</th>
                <th>Créé par</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for news in allNews %}
                <tr>
                    <td>{{ news.id }}</td>
                    <td>{{ news.name }}</td>
                    <td>{{ news.slug }}</td>
                    <td>{{ news.getUser.usernameCanonical }}</td>
                    <td>
                        {% if news.status == 0 %}
                            Hors ligne
                        {% else %}
                            En ligne
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('intranet_news_view', {'news_id': news.id}) }}" class="fa fa-eye" title="Aperçu"></a>
                        <a href="{{ path('intranet_news_update', {'news_id': news.id}) }}" class="fa fa-pencil-square-o" title="Modifier"></a>
                        <a href="{{ path('intranet_news_delete', {'news_id': news.id}) }}" class="fa fa-trash-o" title="Supprimer"></a>
                        {% if news.status == 0 %}
                            <a href="{{ path('intranet_news_online', {'news_id': news.id}) }}" class="fa fa-toggle-off" title="Mettre en ligne"></a>
                        {% else %}
                            <a href="{{ path('intranet_news_offline', {'news_id': news.id}) }}" class="fa fa-toggle-on" title="Mettre hors ligne"></a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
{% endblock %}