{% extends "intranet.html.twig" %}

{% block title %} Compétence {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Compétence
            <small>Aperçu : {{ skill.title }}</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="{{ path('intranet_homepage') }}">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> <a href="{{ path('intranet_skill_homepage') }}">Compétence</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Aperçu : {{ skill.title }}
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}


    <div class="col-lg-8">

        <a href="{{ path('intranet_skill_update', {'skill_id': skill.id}) }}" class="btn btn-primary" style="margin-bottom:10px;">Modifier</a>


        <!-- Title -->
        <h1>{{ skill.title|capitalize }}</h1>

        <!-- Author -->
        <p class="lead">
            by {{ skill.user.username }}
        </p>

        <hr>
    </div>

{% endblock %}