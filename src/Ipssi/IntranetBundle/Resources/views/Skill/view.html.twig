{% extends "intranet.html.twig" %}

{% block title %} Compétence {% endblock %}

{% block headerContainer %}
    <div class="col-lg-12">
        <h1 class="page-header">
            Compétence
            <small>Aperçu : {{ skill.title }}</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>  <a href="{{ path('intranet_homepage') }}">Accueil</a>
            </li>
            <li class="active">
                <a href="{{ path('intranet_skill_homepage') }}">Compétence</a>
            </li>
            <li class="active">
                <i class="fa fa-eye"></i> Aperçu : {{ skill.title }}
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}


    <div class="col-lg-12">

        <!-- Title -->
        <h1>{{ skill.title|capitalize }}</h1>

        <!-- Author -->
        <p class="lead">
            par {{ skill.user.username }}
        </p>

    </div>

    <br><br><br>
    <a href="{{ path('intranet_skill_update', {'id': skill.id}) }}" class="btn btn-primary" style="margin-bottom:10px;">Modifier</a>


{% endblock %}