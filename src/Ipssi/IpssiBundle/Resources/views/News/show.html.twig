{% extends '::base.html.twig' %}

{% block title %}
    {{ news.metaTitle }}
{% endblock %}

{% block headerContainer %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{ news.title }}
                </h1>
            </div>
        </div>
    </div>

{% endblock %}


{% block body %}
    <div class="container">
        <div class="col-lg-12">

            <!-- Date/Time -->
            <p><span class="glyphicon glyphicon-time"></span> Créé le {{ news.creationDate|date('m/d/Y') }} à {{ news.creationDate|date('H:i') }}</p>

            <hr>

            <!-- Page Content -->
            <p class="lead">
                {{ news.content|raw }}
            </p>

            <hr>
        </div>
    </div>


{% endblock %}