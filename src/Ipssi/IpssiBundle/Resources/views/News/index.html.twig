{% extends '::base.html.twig' %}

{% block title %}
    IPSSI - Actualités
{% endblock %}

{% block headerContainer %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Actualités
                    <small>Ipssi</small>
                </h1>
            </div>
        </div>
    </div>

{% endblock %}


{% block body %}

    <!-- Page Content -->
    <div class="container">

            {% for news in allNews %}
                <!-- Blog Post Row -->
                <div class="row">

                    <div class="col-md-1 text-center">
                        <p><i class="fa fa-file-text fa-4x"></i>
                        </p>
                        <p>{{ news.creationDate|date('d/m/Y') }}</p>
                    </div>
                    <div class="col-md-5">
                        <a href="{{ path('news_show', {'slug': news.slug}) }}">
                            <img class="img-responsive img-hover" src="https://placehold.it/600x300" alt="">
                        </a>
                    </div>
                    <div class="col-md-6">
                        <h3>
                            <a href="blog-post.html">{{ news.title }}</a>
                        </h3>
                        <p>Par <a href="#">{{ news.user.username }}</a>
                        </p>
                        <p>{{ news.resume }}</p>
                        <a class="btn btn-primary" href="{{ path('news_show', {'slug': news.slug}) }}">Lire <i class="fa fa-angle-right"></i></a>
                    </div>

                </div>
                <hr>

            {% endfor %}
        <!-- /.row -->
    </div>

{% endblock %}